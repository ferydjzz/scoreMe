.row
  .col-lg-4.col-md-4
  .col-lg-4.col-md-4
    = simple_form_for(resource, :as => resource_name, :defaults => { input_html: { class: 'form-control' } }, :url => registration_path(resource_name)) do |f|
      = f.error_notification
      - if f.object.errors.present?
        .alert.alert-danger.alert-dismissable
          - f.object.errors.full_messages.each do |error|
            = error
      .form-group.m-b-sm.email_checking
        = f.input :email, required: true, :wrapper => false, placeholder: "username@mail.com", label: false
      .form-group.m-b-sm
        = f.input :password, required: true,:wrapper => false, placeholder: "Password", label: false
      .form-group.m-b-sm
        = f.input :password_confirmation, required: true, :wrapper => false, placeholder: "Retype Password", label: false
      = button_tag "Register", :id => "btn-register", :class => 'btn', :wrapper => false, :disabled => :disabled, :data => { disable_with: "Processing" }
  .col-lg-4.col-md-4
- content_for :scripts do
  = javascript_include_tag 'registration', "data-turbolinks-track" => true